{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "paths": {
            "@entities/*": ["src/entities/*"],
            "@usecases/*": ["src/usecases/*"],
            "@interfaces/*": ["src/interfaces/*"],
            "@repositories/*": ["src/repositories/*"],
            "@utils/*": ["src/utils/*"],
            "@commands/*": ["src/commands/*"]
        }
    },
    "exclude": [
        "vitest.config.ts"
    ]
}
